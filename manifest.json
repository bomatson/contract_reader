{
  "name" : "Contract Reader",
  "version" : "0.0.1",
  "description" : "Always know what you sign",
  "background" : {
    "scripts": ["node_modules/jquery/dist/jquery.min.js", "background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "contract-16.png",
    "default_title" : "There's a contract in this page!",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "contract-16.png",
    "48": "contract-48.png",
    "128": "contract-128.png"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "https://contract-reader.herokuapp.com/",
    "http://localhost:5000/"
    ],
  "manifest_version": 2
}
