{
  "name" : "Contract Reader",
  "version" : "1.1",
  "description" : "Always know what you sign",
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "contract-16.png",
    "default_title" : "There's a contract in this page!",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "contract-16.png",
    "48": "contract-48.png",
    "128": "contract-128.png"
  },
  "permissions": [ "declarativeContent", "activeTab" ],
  "manifest_version": 2
}
